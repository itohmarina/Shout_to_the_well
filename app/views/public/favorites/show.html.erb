<h2><%= @user.name %>さんのお気に入りのストーリー一覧</h2>

<table class="table table-inverse white">
  <tbody>
    <% if @stories.present? %>
      <% @stories.each do |story| %>
      　<tr>
      　   <td>
      　     <%= link_to "#{story.title}", public_story_path(story.id) %>
      　   </td>
      　   <td id="favorite_buttons">
            <%= render "public/favorites/favorite", story: story %>
          </td>
          <td>コメント数:<%= story.story_comments.count %></td>
      　</tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div>
  <% if user_signed_in? && @user == current_user %>
    <%= link_to "マイページに戻る", public_user_path(current_user.id) %>
  <% else %>
    <%= link_to "ユーザーページに戻る", public_user_path(@user.id) %>
  <% end %>
</div>