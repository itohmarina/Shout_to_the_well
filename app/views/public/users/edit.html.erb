<div>
  <%= flash[:notice] %>
</div>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, url: public_user_path(@user.id),local:true, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :user_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "情報を更新する", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to "退会", public_users_unsubscribe_path, class: "bun btn-danger" %>
  </div>
</div>
