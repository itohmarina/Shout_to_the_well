<h2><%= "#{@user.name}さんのストーリー一覧" %></h2>

<table class="table table-hover table-inverse">
    <tbody>
      <% if @stories.present? %>
        <% @stories.each do |story| %>
          <tr>
            <td><%= link_to story.title, public_story_path(story.id) %></td>
            <td><%= story.body %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
</table>
<%= link_to "ユーザーページへ戻る", public_user_path(@user.id) %>