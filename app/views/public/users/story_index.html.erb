<div class='container'>
  <div class='row'>
    <div class='col-sm-12'>
      <h2><%= "#{@user.name}さんのストーリー一覧" %></h2>
      <div>
        <% if user_signed_in? && @user == current_user %>
          <%= link_to "マイページに戻る", user_path(current_user.id) %>
        <% else %>
          <%= link_to "ユーザーページに戻る", user_path(@user.id) %>
        <% end %>
      </div>

      <%= render "public/stories/index", stories: @stories %>
      <% if user_signed_in? && @user == current_user %>
        <h5>非公開中のストーリー一覧</h5>
        <%= render "public/stories/index", stories: @private_stories %>
      <% end %>
    </div>
  </div>
</div>