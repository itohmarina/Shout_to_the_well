<h2>コメント一覧</h2>
<% @comments.each do |comment| %>
  <div>
    <%= comment.body %>
    <% if comment.is_deleted==false %>
      <%= link_to "無効化する", admin_comment_path(comment.id), method: :patch, class:"btn btn-danger" %>
    <% else %>
      <%= link_to "有効化する", admin_comment_path(comment.id), method: :patch, class:"btn btn-success" %>
    <% end %>
  </div>
<% end %>
<div>
  <%= form_with model: @comment, url: admin_comments_path, method: :post do |f| %>
    <%= f.label :body, "コメント作成(50文字以内)" %>
    <%= f.text_area :body, placeholder:"コメントを入力してください", class: "title-text" %>
    <p class = "title-counter">0文字</p>
    <%= f.submit "コメント作成", class:"btn btn-primary" %>
  <% end %>
</div>